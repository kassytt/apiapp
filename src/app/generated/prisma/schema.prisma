generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

generator markdown {
  provider = "prisma-markdown"
  output   = "./ERD.md"
  title    = "ERå›³"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id         Int        @id @default(autoincrement())
  title      String
  content    String
  comments   Comment[]
  categories Category[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  comment   String
  article   Article  @relation(fields: [articleId], references: [id])
  articleId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Category {
  id        Int       @id @default(autoincrement())
  category  String
  articles  Article[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}
